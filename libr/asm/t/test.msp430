#!/bin/bash
asm_test() {
	disas=`rasm2 -d -amsp430 $1 | tr "\\n" ";"`
	printf "Disassembled $1 to $disas\n"
	if [ "$disas" = "$2" ]; then
		echo -e "\x1b[32mOK\x1b[0m ($disas)"
	else
		echo -e "\x1b[31mFAILED\x1b[0m ($disas), expected $2"
	fi
}

# Basic
asm_test 3041 'ret ;'

# Long form
asm_test fb903b000000 'cmp.b #0x3b, 0x0(r11);'
