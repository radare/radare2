R2PM_BEGIN

R2PM_GIT "https://github.com/keystone-engine/keystone"
R2PM_DESC "[syspkg] keystone assembler library"

R2PM_INSTALL() {
	mkdir build
	cd build || exit 1
	../make-lib.sh debug
	${SUDO} ${MAKE} install
	../make-share.sh debug
	${SUDO} ${MAKE} install
}

R2PM_UNINSTALL() {
	cd build || exit 1
	${SUDO} ${MAKE} uninstall
}

R2PM_END
